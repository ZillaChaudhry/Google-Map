<link href="~/login/login.css" rel="stylesheet" />
<link href="~/login/verifys.css" rel="stylesheet" />
<link href="~/login/resendbutton.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">


<div id="VerificationPage" style="margin-top:15%;margin-bottom:2%;">
    <div class="title-text">
        <div class="title verification">
            Verification Page
        </div>
    </div>
    <div class="form-container">
        <div class="form-inner">
            <form id="verificationForm" action="#" method="post" onsubmit="EmailVerification(event)">
                <div class="alert alert-info d-flex align-items-center mt-3" style="font-size: 14px; border-radius: 8px;">
                    <i class="bi bi-envelope-fill me-2" style="color: #007bff; font-size: 18px;"></i>
                    <span>
                        A verification code has been sent to <strong>@Context.Session.GetString("ForgotEmail")</strong>.
                    </span>
                </div>

                <div class="field">
                    <input type="text" name="RandomCode" id="RandomCode" placeholder="Enter Verification Code" required>
                </div>
                <div class="field btn">
                    <div class="btn-layer"></div>
                    <input type="submit" value="Verify">
                </div>
                <div class="verification-link" style="margin-top:10px;">
                    Didn't receive the code? <button class="RResendCodeid" onclick="ForgotResendCodes(event)">Resend Code</button>
                </div>
            </form>
        </div>
    </div>
</div>
